{
  "name": "Kiva Lender Assistant",
  "description": "The Kiva Lender Assistant points out details about the loans you're looking at.",
  "version": "0.1",
  "manifest_version": 2,

  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tts",
    "storage",
    "*://www.kiva.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.kiva.org/*"],
      "run_at": "document_start",
      "js": ["js_lib/jquery/jquery.min.js", "inject/all_start.js"],
      "css": ["inject/all.css"]
    },
    {
      "matches": ["*://www.kiva.org/*"],
      "run_at": "document_end",
      "js": ["inject/all_end.js"]
    },
    {
      "matches": ["http://www.kiva.org/lend*"],
      "run_at": "document_end",
      "js": ["inject/loans.js"]
    },
    {
      "matches": ["http://www.kiva.org/live*"],
      "css": ["inject/live.css"],
      "js": ["inject/live.js"]
    },
    {
      "matches": ["http://www.kiva.org/live","http://www.kiva.org/live?v=2"],
      "css": ["inject/live_globe.css"],
      "js": ["inject/live_globe.js"]
    },
    {
      "matches": ["http://www.kiva.org/live?v=1"],
      "css": ["inject/live_map.css"],
      "js": ["inject/live_map.js"]
    },
    {
      "matches": ["http://www.kiva.org/team/*"],
      "css": ["inject/team.css"],
      "js": ["inject/team.js"]
    }
  ]
}