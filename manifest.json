{
  "name": "Kiva Lender Assistant (Beta)",
  "description": "KLA analyzes loans, shows repayment data on the list of loans, gives easy access to what's happening now, and much more!",
  "version": "0.5",
  "manifest_version": 2,
  "homepage_url": "https://github.com/nuclearspike/lenderassist",
  "background" : { "page": "background.html" },
  "options_page": "options_custom/index.html",
  "icons": { "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" },
  "permissions": [
    "tts",
    "storage",
    "http://www.kiva.org/",
    "https://www.kiva.org/",
    "https://zip.kiva.org/",
    "http://api.kivaws.org/",
    "https://api.kivaws.org/"
  ],
  "omnibox": {
    "keyword": "kiva"
  },
  "content_scripts": [
    {
      "matches": ["*://www.kiva.org/*","https://zip.kiva.org/*"],
      "run_at": "document_start",
      "js": ["js_lib/jquery/jquery.min.js", "js_lib/jquery/jquery.sparkline.min.js", "inject/all_common_start.js"]
    },
    {
      "matches": ["*://www.kiva.org/*"],
      "run_at": "document_start",
      "js": ["inject/all_start.js"],
      "css": ["inject/all.css"]
    },
    {
      "matches": ["*://www.kiva.org/*"],
      "run_at": "document_end",
      "js": ["inject/all_end.js"]
    },
    {
      "matches": ["*://www.kiva.org/*"],
      "js": ["inject/all_idle.js"]
    },
    {
      "matches": ["https://www.kiva.org/*"],
      "js": ["inject/secure_pages.js"]
    },
    {
      "matches": ["http://www.kiva.org/lend/*"],
      "run_at": "document_end",
      "js": ["inject/loans.js"]
    },
    {
      "matches": ["http://www.kiva.org/lend","http://www.kiva.org/lend?*","http://www.kiva.org/lend#*"],
      "run_at": "document_end",
      "js": ["inject/lend.js"]
    },
    {
      "matches": ["http://www.kiva.org/partners/*"],
      "run_at": "document_end",
      "js": ["inject/partner.js"]
    },
    {
      "matches": ["http://www.kiva.org/live*"],
      "run_at": "document_end",
      "css": ["inject/live.css"],
      "js": ["inject/live.js"]
    },
    {
      "matches": ["http://www.kiva.org/live","http://www.kiva.org/live?v=2"],
      "run_at": "document_end",
      "css": ["inject/live_globe.css"],
      "js": ["inject/live_globe.js"]
    },
    {
      "matches": ["http://www.kiva.org/live?v=1"],
      "run_at": "document_end",
      "css": ["inject/live_map.css"],
      "js": ["inject/live_map.js"]
    },
    {
      "matches": ["https://www.kiva.org/myLenderId*"],
      "run_at": "document_end",
      "js":["inject/my_lender_id.js"]
    },
    {
      "matches": ["http://www.kiva.org/lender/*"],
      "js": ["inject/lender.js"]
    },
    {
      "matches": ["http://www.kiva.org/team/*"],
      "css": ["inject/team.css"],
      "js": ["inject/team.js"]
    },
    {
      "matches": ["https://zip.kiva.org/*"],
      "run_at": "document_end",
      "js": ["inject/zip.js"]
    }
  ]
}