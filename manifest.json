{
  "name": "Kiva Lender Assistant",
  "description": "The Kiva Lender Assistant 1) points out details about the loans you're looking at. 2) In Chrome's location bar, just type 'kiva' and a keyword to search new loans. 3) Adds 'Live' link to every page. 4) Is smarter about the links to Zip (automatically logs you in). 5) Hold your mouse over another lender's name and get a brief run down, click into their page and get a summary. 6) Loads the lender supergraphs by default",
  "version": "0.1",
  "manifest_version": 2,
  "homepage_url": "http://kivalens.org",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tts",
    "storage",
    "http://www.kiva.org/",
    "https://www.kiva.org/",
    "https://zip.kiva.org/",
    "http://api.kivaws.org/",
    "https://api.kivaws.org/"
  ],
  "omnibox": {
    "keyword": "kiva"
  },
  "content_scripts": [
    {
      "matches": ["*://www.kiva.org/*","https://zip.kiva.org/*","https://www.kivalens.org/nosilverlight.htm"],
      "run_at": "document_start",
      "js": ["js_lib/jquery/jquery.min.js", "inject/all_common_start.js"]
    },
    {
      "matches": ["*://www.kiva.org/*"],
      "run_at": "document_start",
      "js": ["inject/all_start.js"],
      "css": ["inject/all.css"]
    },
    {
      "matches": ["*://www.kiva.org/*"],
      "run_at": "document_end",
      "js": ["inject/all_end.js"]
    },
    {
      "matches": ["*://www.kiva.org/*"],
      "js": ["inject/all_idle.js"]
    },
    {
      "matches": ["https://www.kiva.org/*"],
      "js": ["inject/secure_pages.js"]
    },
    {
      "matches": ["http://www.kiva.org/lend/*"],
      "run_at": "document_end",
      "js": ["inject/loans.js"]
    },
    {
      "matches": ["http://www.kiva.org/partners/*"],
      "run_at": "document_end",
      "js": ["inject/partner.js"]
    },
    {
      "matches": ["http://www.kiva.org/live*"],
      "run_at": "document_end",
      "css": ["inject/live.css"],
      "js": ["inject/live.js"]
    },
    {
      "matches": ["http://www.kiva.org/live","http://www.kiva.org/live?v=2"],
      "run_at": "document_end",
      "css": ["inject/live_globe.css"],
      "js": ["inject/live_globe.js"]
    },
    {
      "matches": ["http://www.kiva.org/live?v=1"],
      "run_at": "document_end",
      "css": ["inject/live_map.css"],
      "js": ["inject/live_map.js"]
    },
    {
      "matches": ["https://www.kiva.org/myLenderId*"],
      "run_at": "document_end",
      "js":["inject/my_lender_id.js"]
    },
    {
      "matches": ["http://www.kiva.org/lender/*"],
      "js": ["inject/lender.js"]
    },
    {
      "matches": ["http://www.kiva.org/team/*"],
      "css": ["inject/team.css"],
      "js": ["inject/team.js"]
    },
    {
      "matches": ["https://zip.kiva.org/*"],
      "run_at": "document_end",
      "js": ["inject/zip.js"]
    },
    {
      "matches": ["https://www.kivalens.org/nosilverlight.htm"],
      "run_at": "document_start",
      "js": ["inject/oauth.js"]
    }
  ]
}